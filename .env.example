# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/support_chat_b2b
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_NAME=support_chat_b2b

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=3001
SOCKET_PORT=3002

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration  
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# Storage Configuration (S3-compatible)
S3_BUCKET=support-chat-files
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=http://localhost:9000
MAX_FILE_SIZE_MB=10

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@supportchat.com.br

# Redis Configuration (for sessions/cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LGPD/Security Configuration
RETENTION_DAYS=365
ENCRYPTION_KEY=your-encryption-key-32-chars-long
ENABLE_AUDIT_LOG=true
ENABLE_DATA_ENCRYPTION=true
TLS_ENABLED=false

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_DESTINATION=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,audio/mp3,audio/ogg

# Metrics & Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Company Defaults
DEFAULT_QUEUE_TIMEOUT_MINUTES=30
DEFAULT_CONVERSATION_TIMEOUT_HOURS=24
MAX_QUEUE_SIZE=100
