{
  "name": "scwa-b2b",
  "version": "0.1.0",
  "description": "Sistema de chat para suporte B2B",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:e2e": "playwright test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && npm run format",
    "format:check": "npm run format:check:backend && npm run format:check:frontend",
    "format:check:frontend": "cd frontend && npm run format:check",
    "format:check:backend": "cd backend && npm run format:check",
    "docker:up": "docker compose up -d postgres redis minio",
    "docker:down": "docker compose down",
    "docker:build": "docker compose --profile app build",
    "docker:prod": "docker compose --profile production up --build",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:seed": "node ./database/seed/seed.js",
    "db:reset": "cd backend && npx prisma migrate reset",
    "db:studio": "cd backend && npx prisma studio",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && npm run lint:fix",
      "cd frontend && npm run format"
    ],
    "backend/**/*.{js,ts}": [
      "cd backend && npm run lint:fix",
      "cd backend && npm run format"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rafabrdev/scwa-b2b"
  },
  "keywords": [
    "chat",
    "support",
    "b2b",
    "multi-tenant",
    "lgpd",
    "brazil",
    "nestjs",
    "nextjs",
    "typescript",
    "postgresql"
  ],
  "author": "BR Sistemas",
  "license": "UNLICENSED"
}
